<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
      
      <div class="col-sm-8">
        <dl class="dl-horizontal">
        <h2 class="reviews">Reviews</h2>
        <%= form_for [@product, @review] do |form| %>
          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :rating %>
            <%= form.select :rating, options_for_select([1,2,3,4,5]), class: 'form-control' %>
          </div>
            <%= form.submit "New Review" %>
            <% end %>
          <% if @reviews.empty? %>
          <dd>There are currently no reviews for this product.</dd>
          <% else %>
          <% @reviews.each do |review| %>
          <dt>Reviewer</dt>
          <dd><%= review.user.first_name%>
          <dt>Rating</dt>
          <dd><%= review.rating%>
          <dt>Description</dt>
          <dd><%= review.description%>
          <p>--------------------------------------------------</p>
          <% end %>
          <% end %>
        </dl>        

      </div>
    </div>



  </article>

</section>
