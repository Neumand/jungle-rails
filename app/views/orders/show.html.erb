<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Please see order details below:</h4>
    <h4>Email: <strong><%= @order.email %></strong></h4>
  </div>

    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Line Item Total</th>
        </tr>
      </thead>
      <tbody>
      <% @items.each do |item| %>
      <tr>
  <td>
    <%= image_tag item.image.tiny %>
  </td>
  <td>
    <h4><%= item.name %></h4>
    <br>
    <p><%= item.description %></p>
  </td>
  <td>
    <%= item.price_cents / 100.0 %>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= (item.price_cents / 100.0) * item.quantity %>
  </td>
</tr>
      <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Back to Products", root_path, class: 'btn btn-lg btn-primary' %>

</section>
